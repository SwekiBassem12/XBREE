<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Utils.Restau_details">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kfc"
        android:layout_marginLeft="40dp"/>

    <LinearLayout
        android:background="@drawable/res_bg"
        android:id="@+id/constrainte"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restau_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Restaurant name"
            android:textSize="24sp"
            android:textStyle="bold" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/review_stars"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/visitors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(260 reviews)"
        android:textSize="12sp" />

</LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="200dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/black" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/clock" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:00 - 22:00"
        android:textSize="14sp" />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="160dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location" />
    <TextView
        android:id="@+id/restau_loaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>