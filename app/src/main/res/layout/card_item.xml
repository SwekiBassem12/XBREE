<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="233dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/participer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_ui"
                android:gravity="center"
                android:text="Book me" />

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:foregroundGravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/back_pic_eve"
            app:riv_corner_radius_bottom_left="5dp"
            app:riv_corner_radius_bottom_right="5dp"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/favori"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="310dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/logo"
                android:layout_marginLeft="310dp" />


            <TextView
                android:id="@+id/titleCamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="110dp"
                android:text="Defaultname"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="10dp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageUser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="140dp"


                app:srcCompat="@drawable/avatar"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="145dp"
                android:text="defaultuser"
                android:textColor="#ececea"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_marginLeft="45dp" />


            <TextView
                android:id="@+id/dateDebut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="175dp"
                android:text="defaultdate"
                android:textColor="#cacac6"
                android:textSize="12dp"
                android:textStyle="normal"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="173dp"
                android:textColor="#FDFDFD"
                android:textSize="14dp"
                android:textStyle="normal"
                android:layout_marginLeft="100dp" />

            <TextView
                android:id="@+id/dateFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:layout_marginTop="175dp"
                android:text="defaultenddate"
                android:textColor="#cacac6"
                android:textSize="12dp"
                android:textStyle="normal"
                android:layout_marginLeft="130dp" />

            <ImageView
                android:layout_width="249dp"
                android:layout_height="34dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="175dp"

                android:layout_marginLeft="230dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginTop="178dp"
                android:fontFamily="sans-serif-medium"
                android:text="Default price"
                android:textColor="#C62828"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_marginLeft="280dp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="200dp"

                android:text="defaultlocation"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_marginLeft="10dp" />
        </FrameLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>