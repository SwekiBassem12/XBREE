<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="160dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cafe_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kafeine" />

        <TextView
            android:id="@+id/cafe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cafe_image"
            android:text="Kafeine"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cafe_descrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cafe_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/cafe_image"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/cafe_location"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="108dp"
                android:text="TTTTTTT" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:background="@color/profileEditTextColor"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"/>

</androidx.cardview.widget.CardView>